# Discord Bot Token (from Discord Developer Portal)
DISCORD_BOT_TOKEN=

# Discord Application Client ID (for registering Slash Commands)
DISCORD_CLIENT_ID=

# Discord Server ID
DISCORD_GUILD_ID=

# Channel ID (Bot only operates in this channel)
DISCORD_CHANNEL_ID=

# Allowed user IDs (comma-separated)
ALLOWED_USER_IDS=

# Default model
DEFAULT_MODEL=claude-opus-4-6

# Default working directory (optional, falls back to the first project in projects.json)
DEFAULT_CWD=

# Default permission mode (default | acceptEdits | bypassPermissions)
DEFAULT_PERMISSION_MODE=default

# Bot's own repo path — sessions for this path use the general channel (defaults to cwd)
BOT_REPO_PATH=

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=5

# Approval timeout — auto-deny pending tool approvals after this duration (default: 5 min)
APPROVAL_TIMEOUT_MS=300000

# Session idle timeout — auto-archive waiting_input sessions after this duration (default: 30 min)
SESSION_IDLE_TIMEOUT_MS=1800000

# Hide Read tool embeds from Discord threads (default: false)
HIDE_READ_RESULTS=false
# Hide Glob and Grep (search) tool embeds from Discord threads (default: false)
HIDE_SEARCH_RESULTS=false
# Hide all tool embeds from Discord threads (default: false)
HIDE_ALL_TOOL_EMBEDS=false
# Show compact single-line tool embeds instead of full embeds (default: false)
COMPACT_TOOL_EMBEDS=false

# Daily Summary Settings
# Enable/disable daily summary posting (default: true)
SUMMARY_ENABLED=true
# Discord channel name for daily summaries (default: claude-daily-summary, auto-created)
SUMMARY_CHANNEL_NAME=claude-daily-summary
# Hour of day (UTC, 0-23) to post the daily summary (default: 0 = midnight UTC)
SUMMARY_HOUR_UTC=0

# Budget Limits (0 = unlimited, value in USD)
BUDGET_DAILY_LIMIT_USD=0
BUDGET_WEEKLY_LIMIT_USD=0
BUDGET_MONTHLY_LIMIT_USD=0

# Show git diff summary after session completion (default: true)
SHOW_GIT_SUMMARY=true

# Directory for persistent data files (default: current working directory)
# Useful for Docker deployments to separate data from application code
# DATA_DIR=./data

# ─── Platform Toggles ─────────────────────────────────
# Enable/disable platforms (at least one must be enabled)
# All enabled platforms run in a single process with shared state.
DISCORD_ENABLED=true
# SLACK_ENABLED=false
# WHATSAPP_ENABLED=false

# ─── Slack Configuration ──────────────────────────────
# Required when SLACK_ENABLED=true
# 1. Create a Slack app at https://api.slack.com/apps
# 2. Enable Socket Mode and get the App-Level Token (xapp-...)
# 3. Add bot scopes: chat:write, chat:write.public, commands, files:read
# 4. Install to workspace and get the Bot Token (xoxb-...)
# 5. Register slash commands: /claude-prompt, /claude-stop, /claude-status
# SLACK_BOT_TOKEN=xoxb-your-bot-token
# SLACK_APP_TOKEN=xapp-your-app-level-token
# SLACK_SIGNING_SECRET=your-signing-secret

# ─── WhatsApp Configuration ──────────────────────────
# Required when WHATSAPP_ENABLED=true
# Uses whatsapp-web.js (unofficial library, experimental).
# On first launch, scan the QR code in the terminal with WhatsApp.
# Comma-separated phone numbers allowed to interact (without + prefix).
# Leave empty to allow all numbers (not recommended).
# WHATSAPP_ALLOWED_NUMBERS=14155551234,447700900123
