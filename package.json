{
    "name": "claude-code-dc-bot",
    "version": "0.1.0",
    "description": "Discord Bot for remote control of Claude Code CLI",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "deploy-commands": "tsx src/commands/deploy-commands.ts",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@anthropic-ai/claude-agent-sdk": "^0.2.37",
        "discord.js": "^14.18.0",
        "dotenv": "^16.4.7",
        "pino": "^10.3.0",
        "pino-pretty": "^13.1.3"
    },
    "devDependencies": {
        "@types/node": "^22.13.1",
        "@vitest/coverage-v8": "^4.0.18",
        "tsx": "^4.19.2",
        "typescript": "^5.7.3",
        "vitest": "^4.0.18"
    },
    "packageManager": "pnpm@10.20.0"
}